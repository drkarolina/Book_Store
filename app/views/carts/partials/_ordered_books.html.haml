.hidden-xs
  %table.table.table-hover
    %tr.no-hover
      %th.col-pic.pl-0
        %span.in-grey-600 
          = t('.product')
      %th.col-title
      %th.col-price
        %span.in-grey-600           
          = t('.price')
      %th.col-quantity
        %span.in-grey-600
          = t('.quantity')
      %th.col-total
        %span.in-grey-600
          = t('.subtotal')
      %th.col-close
    - @order.order_items.each do |order_item|
      %tr
        %td
          .general-img-wrap-table
            = link_to book_path(order_item.book) do
              = image_tag(order_item.book.preview_image, alt: order_item.book.title, class: 'cart-img-shadow pull-left')
        %td
          = link_to order_item.book.title, book_path(order_item.book), class: 'title'
        %td
          %span.font-16.in-gold-500 
            = I18n.t('.price_in_euro', price: order_item.book.price )
        %td
          .input-group
            %a.input-link{href: "#"}
              %i.fa.fa-minus.line-heaght-40
            %input.form-control.quantity-input{type: "text", value: order_item.quantity}
            %a.input-link{href: "#"}
              %i.fa.fa-plus.line-heaght-40
        %td
          %span.font-16.in-gold-500 
            = I18n.t('.price_in_euro', price: order_item.total_price )
        %td
          %button.close.general-cart-close{type: "button", 'aria-label': "Close"}
            %span{'aria-hidden': "true"} &times;