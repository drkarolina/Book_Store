.hidden-xs.divider-lg.pt-20
  %table.table.table-hover
    %thead
      %tr
        %th
          %span.in-grey-600
            = t('.book')
        %th.col-method
        %th
          %span.in-grey-600
            = t('.price')
        %th
          %span.in-grey-600
            = t('.quantity')
        %th
          %span.in-grey-600
            = t('.total')
    %tbody
      - order.order_items.each do |order_item|
        %tr
          %td
            .general-img-wrap-table
              = image_tag(order_item.book.preview_image, alt: order_item.book.title, class: 'cart-img-shadow pull-left')
          %td
            %p.title 
              = order_item.book.title
            %p.in-grey-600.fw-300
              = order_item.book.short_description
          %td
            %span.font-16.in-gold-500 
              = I18n.t('.price_in_euro', price: order_item.book.price)
          %td
            %span.ml-30
              = order_item.quantity
          %td
            %span.font-16.in-gold-500 
              = I18n.t('.price_in_euro', price: order_item.total_price)