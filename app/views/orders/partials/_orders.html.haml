.hidden-xs.mb-res-50
  %table.table.table-hover
    %thead
      %tr
        %th
          %span.in-grey-600
            = t('.number')
        %th
          %span.in-grey-600
            = t('.completed_at')
        %th
          %span.in-grey-600
            = t('.status')
        %th
          %span.in-grey-600
            = t('.total')
    %tbody
      - @orders.each do |order|
        %tr
          %td
            %span.general-order-number
              = link_to order.number, order_path(order)
          %td
            %span.in-grey-900.font-16.fw-300
              = order.updated_at.strftime('%Y-%m-%d')
          %td
            %span.font-16.in-grey-900.fw-300 
              = t("orders.#{order.status}")
          %td
            %strong.font-16 
              = I18n.t('.price_in_euro', price: order.total_price)