.col-md-5.mb-40
  .text-center
    %h3.general-subtitle 
      = t('.returning_customer')
    = link_to user_facebook_omniauth_authorize_path, method: :post, class: 'general-login-icon facebook' do
      .fab.fa-facebook-square
    %p.general-login-text 
      = t('.or')
  %form.general-form
    .mb-40
      %p.mb-15 
        = t('.log_in')
      .form-group.mb-30
        %label.control-label.input-label{for: "email"} 
          = t('.email')
        %input#email.form-control{name:"email", type: "email", placeholder: "Enter Email"}
      .form-group.mb-30
        %label.control-label.input-label{for: "password"}
          = t('.password')
        %input#password.form-control{name:"password", type: "password", placeholder: "Password"}
        %a.help-block.in-gold-500{href: "#"} 
          = t('.forgot_password')
    %button.btn.disabled.mb-20
      = t('.log_in')