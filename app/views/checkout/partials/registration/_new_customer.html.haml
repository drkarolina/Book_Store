.col-md-5.col-md-offset-1.mb-60
  .text-center
    %h3.general-subtitle
      = t('.new_customer')
    = link_to user_facebook_omniauth_authorize_path, method: :post, class: 'general-login-icon facebook' do
      .fab.fa-facebook-square
    %p.general-login-text
      = t('.or')
  %form.general-form
    .mb-40
      %p.mb-5 
        = t('.quick_register')
      %p.general-info-text.font-12.mb-20 
        = t('.quick_register_info')
      .form-group.mb-30
        %label.control-label.input-label{for: "email"}
          = t('.email')
        %input#email.form-control{name:"email", type: "email", placeholder: "Enter Email"}
    %button.btn.disabled.mb-20 
      = t('.coninue_checkout')