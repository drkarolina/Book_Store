.mb-35
  %h3
    = t('.best_sellers')
  .row
    - @best_sellers.each do |book|
      .col-sm-6.col-md-3
        .general-thumb-wrap
          .thumbnail.general-thumbnail
            = image_tag(book.preview_image, alt: book.title, class: 'general-thumbnail-img img-shadow')
            .thumb-hover
              .general-thumb-link-wrap
                = link_to book_path(book), class: 'thumb-hover-link' do
                  %i.fa.fa-eye.thumb-icon{'aria-hidden': "true"}
                = link_to order_items_path(order_item: {quantity: Constants::MIN_BOOK_QUANTITY, book_id: book.id}, index: true), method: :post, class: 'thumb-hover-link' do
                  %i.fa.fa-shopping-cart.thumb-icon
        .mb-35
          .clearfix
            %p.pull-right.font-16.in-gold-500
              = book.price_in_euro
            %p.title.mr-55
              = book.title
          %span.divider-sm
          %p.lead.small
            = book.authors_full_name