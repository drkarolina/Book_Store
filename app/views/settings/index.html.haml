%main.container
  %h1.general-title-margin
    = t('.settings')
  %ul.nav.clearfix.mb-20{ role: 'tablist' }
    %li.tab-item.active{ role: 'presentation' }
      %a.tab-link{ href: '#address', 'aria-controls': 'address', role: 'tab', 'data-toggle': 'tab' }
        = t('.address')
    %li.tab-item{ role: 'presentation' }
      %a.tab-link{ href: '#privacy', 'aria-controls': 'privacy', role: 'tab', 'data-toggle': 'tab' }
        = t('.privacy')
  .tab-content
    .tab-pane.fade.in.active#address{ role: 'tabpanel' }
      = render  partial: 'settings/partials/addresses', locals: { billing_address: @settings_service.billing_address, shipping_address: @settings_service.shipping_address, billing_errors: @settings_service.billing_errors, shipping_errors: @settings_service.shipping_errors, countries: @settings_service.countries }
    .tab-pane.fade#privacy{ role: 'tabpanel' }
      .row.mb-60
        .col-sm-5
          = render 'settings/partials/forms/edit_email'
        .col-sm-5.col-sm-offset-1
          = render 'settings/partials/forms/password_form'
        .col-sm-12
          = render 'settings/partials/forms/remove_account_form'